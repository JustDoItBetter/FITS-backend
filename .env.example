# FITS Backend - Umgebungsvariablen (Beispiel)
# Kopiere diese Datei zu .env und passe die Werte an

# Server
SERVER_HOST=localhost
SERVER_PORT=8080
ENVIRONMENT=development

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USER=fits_user
DB_PASSWORD=fits_password
DB_NAME=fits_db
DB_SSL_MODE=disable

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_DURATION=24h
JWT_REFRESH_TOKEN_DURATION=168h
JWT_INVITATION_TOKEN_DURATION=168h

# Admin
ADMIN_RSA_KEY_PATH=configs/keys/admin.key
ADMIN_RSA_PUB_PATH=configs/keys/admin.pub

# File Uploads
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS (wenn Frontend auf anderem Port l√§uft)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1m
